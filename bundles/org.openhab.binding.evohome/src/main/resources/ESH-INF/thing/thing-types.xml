<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="evohome" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0" xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">
	<thing-type id="display" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="account" />
		</supported-bridge-type-refs>
		<label>evohome Display</label>
		<description>This represents the evohome control display.</description>
		<channels>
			<channel id="SystemMode" typeId="systemMode" />
		</channels>
		<config-description>
			<parameter name="id" type="text" required="true" readOnly="true">
				<label>ID</label>
				<description>ID of the display</description>
			</parameter>
			<parameter name="name" type="text" required="false" readOnly="true">
				<label>Name</label>
				<description>Name of the display</description>
			</parameter>
		</config-description>
	</thing-type>
	<thing-type id="heatingzone" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="account" />
		</supported-bridge-type-refs>
		<label>evohome Heating Zone</label>
		<description>This represents the evohome Heating Zone.</description>
		<channels>
			<channel id="Temperature" typeId="temperature" />
			<channel id="SetPointStatus" typeId="setpointstatus" />
		<channel id="SetPoint" typeId="setpoint" /> 
		</channels>
		<config-description>
			<parameter-group name="setPoint">
				<advanced>true</advanced>
				<label>Set Point Handling</label></parameter-group>	  
			<parameter name="id" type="text" required="true" readOnly="true">
				<label>ID</label>
				<description>ID of the zone</description>
			</parameter>
			<parameter name="name" type="text" required="false" readOnly="true">
				<label>Name</label>
				<description>Name of the zone</description>
			</parameter>
			<parameter name="overrideMode" type="integer" groupName="setPoint">
				<label>Setpoint Override Mode</label>
				<default>-1</default>
				<options>
					<option value="-1">Inherit from Bridge</option>
					<option value="0">Permanent Override</option>
					<option value="1">Override till next scheduled set point change</option>
					<option value="2">Override for specific duration</option>
				</options>
				<description>Choose how sending a command to a set point channel will behave</description>
			</parameter>
			<parameter name="overrideTime" type="integer" groupName="setPoint" min="-1" max="1440">
				<label>Override Time</label>
				<description>
					Override time in minutes when using mode 3 (or if mode 2 fails to find a schedule point) (-1 causes this setting to be inherited from the bridge)
				</description>
				<default>-1</default>
			</parameter>
		</config-description>
	</thing-type>
</thing:thing-descriptions>
