                          xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
                          xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <thing-type id="evoTouch" listed="false">
        <supported-bridge-type-refs>
            <bridge-type-ref id="gateway" />
        </supported-bridge-type-refs>
        
        <label>EvoTouch Control Panel</label>
        <description>This represents the EvoTouch Control Panel.</description>

        <channels>
            <channel id="Temperature" typeId="temperature" />
        </channels>
    </thing-type>

    <thing-type id="radiatorValve" listed="false">
        <supported-bridge-type-refs>
            <bridge-type-ref id="gateway" />
        </supported-bridge-type-refs>
        
        <label>Evohome Radiator Valve</label>
        <description>This represents the Evohome Radiator Valves.</description>

        <channels>
            <channel id="Temperature" typeId="temperature" />
            <channel id="Setpoint" typeId="setpoint" />   
        </channels>
    </thing-type>

</thing:thing-descriptions>